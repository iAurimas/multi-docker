{
	"AWSEBDockerrunVersion": "2",
	"containerdefinitions": [

		{
			"name": "client",
			"image": "iaurimas/multi-client",
			"hostname": "client",
			"essential": false
		},

		{
			"name": "server",
			"image": "iaurimas/multi-server",
			"hostname": "api",
			"essential": false
		},

		{
			"name": "worker",
			"image": "iaurimas/multi-worker",
			"hostname": "worker",
			"essential": false
		},

		{
			"name": "nginx",
			"image": "iaurimas/multi-nginx",
			"hostname": "nginx",
			"essential": true,
			"portMapping": [{
				"hostPort": 80,
				"containerPort": 80
			}],

			"links": ["client", "server"]

		}
	]

}
